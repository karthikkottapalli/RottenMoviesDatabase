<script>
  $(document).ready(function () {
    $(".star").hide();
    });
</script>
<p id="notice"><%= notice %></p>
<div class="container" >
  <table data-toggle="table" data-url="data1.json" data-cache="false" data-height="500">
    <thead>
      <% @movies.each do |movie| %>
        <tr>
            <th><%= image_tag movie.photo.url(:thumb), :style => "border: 1px solid white" %></th>
            <th data-field="tile"><div class="intro-text"><span class="skills">
<b><%= link_to  movie.title, movie, {:style=>'color:#FFFFFF;', :class => "css_class"} %></b></span></div></th>
            <th data-field="rating"> <%= rating_for movie, "movie_rating",:disable_after_rate => true, :imdb_avg => true,:star => 10 
            %></th>
        </tr>
      <% end %>
    </thead>
  </table>
</div>

